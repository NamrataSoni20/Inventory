
<!DOCTYPE html>
<html>
<head>
  <title>Inventory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Inventory", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
           
            <li><%= link_to "Categories",categories_path %></li>
            <li><%= link_to "Products", products_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <p id="notice"><%= notice %></p>

<h1 align="center">Listing Categories</h1>

<table border="0" align="center">
  <thead >
    <tr>
      <th width="200px">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td  width="50px"><%= category.name %></td>
        <td  width="50px"><%= link_to 'Show', category %></td>
        <td  width="50px"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td  width="5px"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
<br>
<p align="center">
<%= link_to 'New Category', new_category_path %>
</p>
</body>
</html>


